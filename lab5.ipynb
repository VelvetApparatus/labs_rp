    "   \"metadata\": {\n",
    "    \"collapsed\": true\n",
    "   },\n",
    "   \"outputs\": [],\n",
    "   \"source\": [\n",
    "    \"import os\\n\",\n",
    "    \"import torch\\n\",\n",
    "    \"import torchaudio\\n\",\n",
    "    \"import pandas as pd\\n\",\n",
    "    \"from silero import silero_tts\\n\",\n",
    "    \"\\n\",\n",
    "    \"# ===== НАСТРОЙКИ =====\\n\",\n",
    "    \"CSV_PATH = \\\"./data/khakas/khakas_merged.csv\\\"     # итоговый корпус с колонкой 'text'\\n\",\n",
    "    \"OUT_DIR = \\\"./data/khakas/audio\\\"\\n\",\n",
    "    \"os.makedirs(OUT_DIR, exist_ok=True)\\n\",\n",
    "    \"\\n\",\n",
    "    \"device = torch.device(\\\"cuda\\\" if torch.cuda.is_available() else \\\"cpu\\\")\\n\",\n",
    "    \"language = 'kjh'                # или 'ru', если kjh не примет\\n\",\n",
    "    \"model_id = 'v5_cis_base_nostress'\\n\",\n",
    "    \"speaker = 'kjh_karina'          # или 'kjh_sibday'\\n\",\n",
    "    \"sample_rate = 24000\\n\",\n",
    "    \"\\n\",\n",
    "    \"# ===== ЗАГРУЗКА МОДЕЛИ =====\\n\",\n",
    "    \"model, example_text = silero_tts(language=language,\\n\",\n",
    "    \"                                 speaker=model_id)\\n\",\n",
    "    \"model.to(device)\\n\",\n",
    "    \"\\n\",\n",
    "    \"# ===== ЗАГРУЗКА КОРПУСА =====\\n\",\n",
    "    \"df = pd.read_csv(CSV_PATH)\\n\",\n",
    "    \"\\n\",\n",
    "    \"# на всякий случай уберём пустые / NaN\\n\",\n",
    "    \"df = df.dropna(subset=[\\\"text\\\"])\\n\",\n",
    "    \"df[\\\"text\\\"] = df[\\\"text\\\"].astype(str).str.strip()\\n\",\n",
    "    \"df = df[df[\\\"text\\\"] != \\\"\\\"]\\n\",\n",
    "    \"\\n\",\n",
    "    \"# если нужно ровно 9000:\\n\",\n",
    "    \"df = df.head(9000)\\n\",\n",
    "    \"\\n\",\n",
    "    \"# ===== ЦИКЛ ПО СТРОКАМ CSV =====\\n\",\n",
    "    \"for idx, text in enumerate(df[\\\"text\\\"], start=1):\\n\",\n",
    "    \"    audio = model.apply_tts(text=text,\\n\",\n",
    "    \"                            speaker=speaker,\\n\",\n",
    "    \"                            sample_rate=sample_rate)\\n\",\n",
    "    \"\\n\",\n",
    "    \"    audio_tensor = torch.tensor(audio).unsqueeze(0)  # [1, T]\\n\",\n",
    "    \"    out_path = os.path.join(OUT_DIR, f\\\"{idx}.wav\\\")\\n\",\n",
    "    \"    torchaudio.save(out_path, audio_tensor, sample_rate)\\n\",\n",
    "    \"\\n\",\n",
    "    \"    if idx % 100 == 0:\\n\",\n",
    "    \"        print(f\\\"Сгенерировано {idx} файлов\\\")\\n\",\n",
    "    \"\\n\",\n",
    "    \"print(\\\"done\\\")\\n\"\n",
    "   ]\n",
    "  }\n",
    " ],\n",
